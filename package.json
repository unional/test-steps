{
  "name": "test-steps",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "coverage": "jest --coverage",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "reporters": [
      "default",
      "jest-audio-reporter"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testRegex": ".*.spec.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unional/test-steps.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unional/test-steps/issues"
  },
  "homepage": "https://github.com/unional/test-steps#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "dependency-check": "^3.2.0",
    "jest": "^23.5.0",
    "jest-audio-reporter": "^2.0.0",
    "ts-jest": "^23.10.0-beta.2",
    "tslint": "^5.11.0",
    "tslint-config-unional": "^0.9.6",
    "typescript": "^3.0.3"
  }
}
